<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

        <!-- Lista de carros - begin -->
        <ListView android:id="@+id/listview_carros_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:listSelector="@drawable/item"
            android:layout_weight="1">
        </ListView>
        <!-- Lista de carros - end -->

        <TextView
            android:id="@+id/msg_lista_vazia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_dark"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:text="@string/entrega_chave_carros_lista_vazia" />

    <!-- Botoes - begin -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button android:id="@+id/btn_proximo_carros_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="proximo"
            android:layout_weight="1"
            android:text="@string/lbl_proximo"/>
    </LinearLayout>
    <!-- Botoes - end -->
</LinearLayout>
