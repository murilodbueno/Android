<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

    <!-- Lista de carros - begin -->

    <ListView android:id="@+id/listview_motoristas_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:listSelector="@drawable/item"
        android:layout_weight="1">
    </ListView>
    <!-- Lista de carros - end -->

    <TextView
        android:id="@+id/msg_lista_vazia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_dark"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:text="@string/entrega_chave_motoristas_lista_vazia" />

    <!-- Botoes - begin -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button android:id="@+id/btn_anterior_motoristas_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="anterior"
            android:text="@string/lbl_anterior"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- Botoes - end -->
</LinearLayout>
