<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

    <!-- Lista de carros - begin -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:gravity="fill"
                android:fontFamily="Calibri"
                android:textColor="@color/text_color_light"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:text="@string/lbl_entrada_veiculos_mensagem"/>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divisor_line"/>

    </TableLayout>

    <ListView android:id="@+id/entrada_veiculos_lista_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    <!-- Lista de carros - end -->

    <TextView
        android:id="@+id/msg_lista_vazia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_dark"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:text="@string/entrada_veiculos_lista_vazia"
        />
</LinearLayout>
