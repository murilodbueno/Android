            </intent-filter>
        </activity>
        <activity android:name="mbueno.com.br.boaviagem.TravelListActivity" >
            <intent-filter>
                <action android:name="boaviagem.ACTION_SHOW_TRAVEL_LIST" />

                <category android:name="boaviagem.CATEGORY_TRAVEL_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="mbueno.com.br.boaviagem.SettingsActivity" >
            <intent-filter>
                <action android:name="boaviagem.ACTION_SHOW_SETTINGS" />

                <category android:name="boaviagem.CATEGORY_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>