<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mbueno.com.br.boaviagem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mbueno.com.br.boaviagem.BoaViagemActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mbueno.com.br.boaviagem.DashBoardActivity" >
            <intent-filter>
                <action android:name="boaviagem.ACTION_SHOW_DASHBOARD" />

                <category android:name="boaviagem.CATEGORY_DASHBOARD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="mbueno.com.br.boaviagem.CostActivity" >
            <intent-filter>
                <action android:name="boaviagem.ACTION_SHOW_NEW_COST" />

                <category android:name="boaviagem.CATEGORY_NEW_COST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="mbueno.com.br.boaviagem.CostListActivity" >
            <intent-filter>
                <action android:name="boaviagem.ACTION_SHOW_COST_LIST" />

                <category android:name="boaviagem.CATEGORY_COST_LIST" />
